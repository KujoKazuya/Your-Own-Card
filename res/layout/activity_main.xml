<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.yourowncard.MainActivity">

    <ImageView
        android:src="@drawable/kaorimilishita"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingBottom="16dp"
        android:text="7UD7VXXX"
        android:fontFamily="sans-serif-light"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textSize="34sp"
        android:background="#FFD600"
        />
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFD600"
        >
        <ImageView
            android:id="@+id/logo"
            android:paddingBottom="0dp"
            android:layout_width="52dp"
            android:layout_height="31dp"
            android:src="@drawable/problack"
            android:paddingLeft="6dp"
            />
        <TextView
            android:id="@+id/milithea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="6dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_toRightOf="@id/logo"
            android:text="Million Live! Theatre Days"
            />
        <TextView
            android:id="@+id/proid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="6dp"
            android:textColor="#000000"
            android:textSize="13sp"
            android:text="Producer ID Card"
            android:layout_toRightOf="@id/logo"
            android:layout_below="@id/milithea"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:gravity="right"
            android:paddingRight="6dp"
            android:textColor="#000000"
            
            android:textSize="13sp"
            android:text="Â©BNEI"
            android:layout_toRightOf="@id/proid"
            android:layout_below="@id/milithea"
            />


    </RelativeLayout>

</LinearLayout>
